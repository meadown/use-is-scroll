{
  "name": "@meadown/use-is-scroll",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "A React hook to track window scroll position and document dimensions",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:cjs && npm run build:esm",
    "build:types": "tsc --project tsconfig.types.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "clean": "rm -rf dist",
    "dev": "npm run build -- --watch",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "react",
    "hook",
    "scroll",
    "scroll-position",
    "scroll-tracking",
    "useScroll",
    "typescript"
  ],
  "author": "Dewan Mobashirul",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meadown/use-is-scroll.git"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "react": "^19.2.2",
    "react-dom": "^19.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5"
  }
}
